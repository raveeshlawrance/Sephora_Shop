<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.details.ProductDetailActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgViewProdThump"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/scrollView"
            android:layout_below="@+id/imgViewProdThump">
        <LinearLayout
            android:id="@+id/linearHorizontalThumps"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" />
        </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollView"
            android:id="@+id/priceDetails"
            android:layout_centerInParent="true">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtViewProdBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Prod Type"
            android:textColor="@color/black"
            android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtViewProdName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewProdBrand"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Prod name"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/sephoraRatingBarSmall"
            android:layout_marginLeft="10dp"
            android:id="@+id/ratingBarProductRating"
            android:layout_below="@+id/txtViewProdName"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBarProductRating"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:text="25.00" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDescTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceDetails"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="@string/description_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescTitle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtUsageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDesc"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:text="@string/usage_title"  />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUsageTitle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    </ScrollView>
</layout>